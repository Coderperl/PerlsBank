@page
@using System.Globalization
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="main-wrapper ">
	<div class="header-top">
		<div class="container2">
			<div class="row align-items-center">
				<div class="col-lg-2 col-md-4">
					<div class="header-top-socials ml-5">
						<a href="#index_about"class="text-white">About</a>
						<a href="#index_stats"class=" text-white">Statistics</a>
					</div>
				</div>
			</div>
		</div>
	</div>
<section class="bg-img">
	<div class="container2 ">
		<div class="row justify-content-center">
			<div class="col-lg-9 col-md-10 ">
				<div class="block">
					<span class="d-block mb-3 text-white text-capitalize">Generic wise finacial statement</span>
					<h1 class="animated fadeInUp mb-5 text-white">Our Bank will <br class="text-white">Revolutionize the financial state of <br class="text-white">Scandinavia</h1>
