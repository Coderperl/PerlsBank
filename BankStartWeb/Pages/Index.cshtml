<section class="section cta">
	<div class="container">
		<div class="row">
			<div class="col-lg-5">
				<div class="cta-item bg-white p-5 rounded">
					<span class="h6 color-four">We create for you</span>
					<h2 class="mt-2 mb-4">Entrust Your Personal Finances to Our Best Team of Professionals</h2>
					<p class="lead mb-4">For any questions reach us at:</p>
					<h3><i class="ti-mobile mr-3 color-four"></i>+0783 23 551 23</h3>
				</div>
			</div>
		</div>
	</div>
</section>
@*Stats*@
<section id="index_stats" class="section counter">
	<h1 class="text-center mb-lg-5 color-four">Current statistics</h1>
	<div class="container">	
		<div class="row justify-content-center">
			<div class="col-lg-3 col-md-6 col-sm-6 border border-gray rounded m-3 ">
				<div class="counter-item text-center mb-3 mb-lg-0">
					<h3 class="mt-3"><span class="counter-stat font-weight-bold">@Model.Customers.Count()</span>+</h3>
					<p>Pleased customers</p>
				</div>
			</div>
			<div class="col-lg-3 col-md-6 col-sm-6 border border-gray rounded m-3 ">
				<div class="counter-item text-center mb-3 mb-lg-0">
					<h3 class="mt-3"><span class="counter-stat font-weight-bold">@Model.Accounts.Count()</span></h3>
					<p>Managed accounts</p>
				</div>
			</div>
			<div class="col-lg-3 col-md-6 col-sm-6 border border-gray rounded m-3 ">
				<div class="counter-item text-center mb-3 mb-lg-0">
					<h3 class="mt-3"><span class="counter-stat font-weight-bold">@Model.GetSum()</span>Sek</h3>
					<p>Total bank funds</p>
				</div>
			</div>
		</div>
	</div>
	
</section>
</div>